    <!-- JavaScript for Worker Dashboard -->
    <script>
        // Worker Dashboard Functions
        function setupWorkerDashboard() {
            const loggedInWorker = JSON.parse(localStorage.getItem("currentUser") || sessionStorage.getItem('currentUser'));
            const tasks = JSON.parse(localStorage.getItem("tasks")) || [];

            if (!loggedInWorker) {
                console.error("No user logged in.");
                return;
            }

            const fullName = loggedInWorker.name; 

            if (!fullName) {
                console.error("Current user has no name defined.");
                return;
            }

            // Filter tasks for this user
            const workerTasks = tasks.filter(task => task.worker === fullName.trim());

            // Group by status
            const pendingTasks = workerTasks.filter(t => t.status === "Pending");
            const ongoingTasks = workerTasks.filter(t => t.status === "Ongoing" || t.status === "In Progress");
            const completedTasks = workerTasks.filter(t => t.status === "Completed");

            // Update UI counts
            document.getElementById("pendingTasks").textContent = pendingTasks.length;
            document.getElementById("ongoingTasks").textContent = ongoingTasks.length;
            document.getElementById("completedTasks").textContent = completedTasks.length;

            // Render dropdowns
            renderDropdown(pendingTasks, "pendingDropdown");
            renderDropdown(ongoingTasks, "ongoingDropdown");
            renderDropdown(completedTasks, "completedDropdown");
        }

        function renderDropdown(list, dropdownId) {
            const container = document.getElementById(dropdownId);
            container.innerHTML = "";

            if (list.length === 0) {
                container.innerHTML = `<span class="dropdown-item text-muted">Nessun task disponibile</span>`;
            } else {
                list.forEach(task => {
                    const item = document.createElement("a");
                    item.href = `/CRM/Worker/Task_W?taskId=${task.title}&status=${task.status}`;
                    item.className = "dropdown-item d-flex justify-content-between align-items-center";
                    item.innerHTML = `
                        <div>
                            <strong>${task.title}</strong><br>
                            <small>${task.project} • Scadenza: ${task.dueDate}</small>
                        </div>
                    `;
                    container.appendChild(item);
                });
            }
        

            function toggleDropdown(cardId, dropdownId) {
                const card = document.getElementById(cardId);
                const dropdown = document.getElementById(dropdownId);
                let isOpen = false;

                card.addEventListener("click", (e) => {
                    e.stopPropagation();

                    // Close other dropdowns
                    document.querySelectorAll('.dropdown-menu').forEach(menu => {
                        if (menu.id !== dropdownId) {
                            menu.style.display = "none";
                        }
                    });

                    // Toggle this one
                    isOpen = dropdown.style.display !== "block";
                    dropdown.style.display = isOpen ? "block" : "none";
                });

                // Close on outside click
                document.addEventListener("click", () => {
                    dropdown.style.display = "none";
                    isOpen = false;
                });
            }
        }

        // Worker Schedule Setup
        function setupWorkerSchedule() {
            const days = ['Domenica', 'Lunedì', 'Martedì', 'Mercoledì', 'Giovedì', 'Venerdì', 'Sabato'];
            const today = new Date().getDay();
            const todayName = days[today];

            const mySchedule = [
                { day: "Lunedì", working: true, start: "8:00", end: "16:00" },
                { day: "Martedì", working: true, start: "8:00", end: "16:00" },
                { day: "Mercoledì", working: false },
                { day: "Giovedì", working: true, start: "9:00", end: "17:00" },
                { day: "Venerdì", working: true, start: "8:00", end: "15:00" },
                { day: "Sabato", working: false },
                { day: "Domenica", working: false }
            ];

            const scheduleBody = document.getElementById('schedule-custom');
            if (scheduleBody) {
                scheduleBody.innerHTML = '';

                mySchedule.forEach(day => {
                    const row = document.createElement('tr');
                    if (day.day === todayName) {
                        row.classList.add('today-custom');
                    }

                    row.innerHTML = `
                        <td>${day.day}</td>
                        <td>
                            <span class="${day.working ? 'working-custom' : 'day-off-custom'}">
                                ${day.working ? 'Lavoro' : 'Giorno Libero'}
                            </span>
                        </td>
                        <td>${day.working ? `${day.start} - ${day.end}` : '-'}</td>
                    `;

                    scheduleBody.appendChild(row);
                });
            }
        }

