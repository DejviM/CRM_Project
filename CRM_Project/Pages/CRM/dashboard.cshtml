                    <p class="mb-0">Accesso completo al sistema e controlli</p>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>

    <!-- Worker Header -->
    <div class="dashboard-header worker-only">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user-tie me-2"></i> Dashboard Lavoratore</h1>
                    <p class="mb-0">Gestisci i tuoi task e progetti</p>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>

    <!-- Client Header -->
    <div class="dashboard-header client-only">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user-check me-2"></i> Dashboard Cliente</h1>
                    <p class="mb-0">Monitora i tuoi progetti e comunicazioni</p>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Header -->
    <div class="dashboard-header user-only">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-user me-2"></i> Dashboard Utente</h1>
                    <p class="mb-0">Benvenuto nel portale CRM</p>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>

    <!-- ADMIN DASHBOARD -->
    <div class="container mt-4 admin-only">
        <div class="row">
            <!-- New Projects Card -->
            <div class="col-xl-4 col-lg-6 mb-3">
                <div class="card border-0 overflow-hidden fs-13px" style="min-height: 320px;">
                    <div class="card-body position-relative">
                        <div class="d-flex align-items-center mb-3">
                            <div class="flex-grow-1">
                                <h5 class="text-opacity-80 mb-0">NUOVI PROGETTI</h5>
                                <h2 class="mt-1 mb-0"><span id="newProjectsCount">0</span></h2>
                            </div>
                            <div class="flex-shrink-0 ms-2">
                                <div class="fs-28px px-2 py-1 fw-bold rounded-2">+15%</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <i class="fa fa-info-circle"></i>
                            <span class="ms-1">Progetti aggiunti questo mese</span>
                        </div>
                        <div class="progress mb-2 bg-light" style="height: 6px">
                            <div class="progress-bar bg-orange" style="width: 37.5%"></div>
                        </div>
                        <div class="mb-4">
                            <small>Crescita mensile progetti</small>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div id="total-sales-sparkline" style="height: 60px;">
                                    <canvas id="totalSalesChart" height="50"></canvas>
                                </div>
                            </div>
                            <div class="flex-shrink-0 ms-3">
                                <a href="/CRM/Admin/ProjectManagement" class="d-flex align-items-center text-decoration-none">
                                    <i class="fa fa-chevron-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completed Tasks Card -->
            <div class="col-xl-4 col-lg-6 mb-3">
                <div class="card border-0 overflow-hidden fs-13px" style="min-height: 320px;">
                    <div class="card-body position-relative">
                        <div class="d-flex align-items-center mb-3">
                            <div class="flex-grow-1">
                                <h5 class="text-opacity-80 mb-0">TASK COMPLETATI</h5>
                                <h2 class="mt-1 mb-0"><span id="completedTasksCount">25</span></h2>
                            </div>
                            <div class="flex-shrink-0 ms-2">
                                <div class="fs-28px px-2 py-1 fw-bold rounded-2">+20%</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <i class="fa fa-info-circle"></i>
                            <span class="ms-1">Task completati questo mese</span>
                        </div>
                        <div class="progress mb-2 bg-light" style="height: 6px">
                            <div class="progress-bar bg-teal" style="width: 50%"></div>
                        </div>
                        <div class="mb-4">
                            <small>Crescita completamento task</small>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div id="conversion-rate-sparkline" style="height: 60px;">
                                    <canvas id="conversionRateChart" height="50"></canvas>
                                </div>
                            </div>
                            <div class="flex-shrink-0 ms-3">
                                <a href="/CRM/Admin/taskMenagment" class="d-flex align-items-center text-decoration-none">
                                    <i class="fa fa-chevron-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- New Clients Card -->
            <div class="col-xl-4 col-lg-6 mb-3">
                <div class="card border-0 overflow-hidden fs-13px" style="min-height: 320px;">
                    <div class="card-body position-relative">
                        <div class="d-flex align-items-center mb-3">
                            <div class="flex-grow-1">
                                <h5 class="text-opacity-80 mb-0">NUOVI CLIENTI</h5>
                                <h2 class="mt-1 mb-0"><span id="newClientsCount">16</span></h2>
                            </div>
                            <div class="flex-shrink-0 ms-2">
                                <div class="fs-28px px-2 py-1 fw-bold rounded-2">+10%</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <i class="fa fa-info-circle"></i>
                            <span class="ms-1">Clienti aggiunti questo mese</span>
                        </div>
                        <div class="progress mb-2 bg-light" style="height: 6px">
                            <div class="progress-bar bg-blue" style="width: 25%"></div>
                        </div>
                        <div class="mb-4">
                            <small>Crescita acquisizione clienti</small>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div id="store-session-sparkline" style="height: 60px;">
                                    <canvas id="storeSessionChart" height="50"></canvas>
                                </div>
                            </div>
                            <div class="flex-shrink-0 ms-3">
                                <a href="/CRM/Admin/UserList" class="d-flex align-items-center text-decoration-none">
                                    <i class="fa fa-chevron-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Row -->
        <div class="row mt-4">
            <!-- Sales Chart Column -->
            <div class="col-lg-8">
                <div class="card-analytics">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0">Clienti aggiunti annualmente</h5>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Settimana</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Mese</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary active">Anno</button>
                            </div>
                        </div>
                        <div id="sales-chart" style="height: 300px;"></div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities Column -->
            <div class="col-lg-4">
                <div class="card-analytics">
                    <div class="card-body">
                        <h5 class="mb-4">Attività Recenti</h5>

                        <!-- Ongoing Task Today -->
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-tasks"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Task in corso: Aggiornamento Sito</h6>
                                <p class="small mb-0">Oggi</p>
                            </div>
                        </div>

                        <!-- Completed Task Activity -->
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 text-success rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Task numero 4 completato</h6>
                                <p class="small mb-0">Proprio ora</p>
                            </div>
                        </div>

                        <!-- New Client Registered -->
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 text-info rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Nuovo cliente registrato</h6>
                                <p class="small mb-0">15 minuti fa</p>
                            </div>
                        </div>

                        <!-- New Project Ordered -->
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-project-diagram"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Nuovo progetto ordinato</h6>
                                <p class="small mb-0">30 minuti fa</p>
                            </div>
                        </div>

                        <!-- New Message -->
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 text-info rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-comment-alt"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Nuovo messaggio da Sarah</h6>
                                <p class="small mb-0">2 ore fa</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Row -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card-analytics">
                    <div class="card-body">
                        <h5 class="card-title">Progetti Clienti Attivi</h5>
                        <div class="table-responsive">
                            <table class="table table-hover table-admin mb-0">
                                <thead>
                                    <tr>
                                        <th>Progetto</th>
                                        <th>Tempo Limite</th>
                                        <th>Prezzo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Rinnovamento UI/UX</td>
                                        <td>2 mesi</td>
                                        <td>€8.250</td>
                                    </tr>
                                    <tr>
                                        <td>Refactoring API</td>
                                        <td>5 mesi</td>
                                        <td>€9.450</td>
                                    </tr>
                                    <tr>
                                        <td>Piattaforma SaaS</td>
                                        <td>1 anno</td>
                                        <td>€12.560</td>
                                    </tr>
                                    <tr>
                                        <td>App Gestione Clienti</td>
                                        <td>1 mese</td>
                                        <td>€1.940</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card-analytics">
                    <div class="card-body">
                        <h5 class="card-title">Strumenti Rapidi Admin</h5>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <a href="/CRM/Admin/ProjectManagement" class="btn btn-outline-primary w-100 py-3">
                                    <i class="fas fa-plus me-2"></i> Aggiungi Progetto
                                </a>
                            </div>
                            <div class="col-6 mb-3">
                                <a href="/CRM/Admin/taskMenagment" class="btn btn-outline-success w-100 py-3">
                                    <i class="fas fa-user-plus me-2"></i> Aggiungi Task
                                </a>
                            </div>
                            <div class="col-6 mb-3">
                                <a href="/CRM/Admin/UserList" class="btn btn-outline-success w-100 py-3">
                                    <i class="fas fa-user me-2"></i> Elenco Utenti
                                </a>
                            </div>
                            <div class="col-6 mb-3">
                                <a href="/CRM/Chat" class="btn btn-outline-warning w-100 py-3">
                                    <i class="fas fa-comment me-2"></i> Chat
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- WORKER DASHBOARD -->
    <div class="container-custom worker-only">
        <h2 class="heading-custom">Il Mio Orario di Lavoro Questa Settimana</h2>

        <table class="table-custom">
            <thead>
                <tr>
                    <th>Giorno</th>
                    <th>Stato</th>
                    <th>Orari</th>
                </tr>
            </thead>
            <tbody id="schedule-custom">
                <!-- Rows will be added here by JavaScript -->
            </tbody>
        </table>
    </div>


    <div class="container my-5 worker-only">
        <div class="row mb-4">
