                    toolbar: { show: false }
                },
                colors: ['#6c5ce7'],
                dataLabels: { enabled: false },
                stroke: { curve: 'smooth', width: 3 },
                fill: {
                    type: 'gradient',
                    gradient: {
                        shadeIntensity: 1,
                        opacityFrom: 0.7,
                        opacityTo: 0.3,
                        stops: [0, 90, 100]
                    }
                },
                xaxis: {
                    categories: ['2014', '2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025'],
                    labels: { style: { colors: '#888' } }
                },
                yaxis: { labels: { style: { colors: '#888' } } },
                tooltip: { y: { formatter: function (val) { return val; } } }
            };

            var salesChart = new ApexCharts(document.querySelector("#sales-chart"), salesChartOptions);
            salesChart.render();
        }

        // Role Detection and Dashboard Setup
        function setupDashboard() {
            const currentUser = JSON.parse(localStorage.getItem('currentUser')) ||
                              JSON.parse(sessionStorage.getItem('currentUser'));

            console.log('Current user:', currentUser);

            if (!currentUser) {
                // If no user is logged in, redirect to login page
                window.location.href = '/CRM/Login';
                return;
            }

            const userRole = currentUser.role || currentUser.Ruolo; 
            console.log('User role:', userRole);

            // Hide all role-specific sections by default
            document.querySelectorAll('.admin-only, .worker-only, .client-only, .user-only').forEach(item => {
                item.style.display = 'none';
            });

            // Show elements based on user role
            if (userRole === 'admin') {
                document.querySelectorAll('.admin-only').forEach(item => {
                    item.style.display = 'block';
                });

                // Load projects count for admin
                const projects = JSON.parse(localStorage.getItem("projects")) || [];
                document.getElementById("newProjectsCount").textContent = projects.length;

                // Setup admin-specific features
                setupCharts();

            } else if (userRole === 'worker') {
                document.querySelectorAll('.worker-only').forEach(item => {
                    item.style.display = 'block';
                });

                // Setup worker-specific features
                setupWorkerDashboard();
                setupWorkerSchedule();
                setupAdminNotes();

            } else if (userRole === 'client') {
                document.querySelectorAll('.client-only').forEach(item => {
                    item.style.display = 'block';
                });

                // Load client info
                const users = JSON.parse(localStorage.getItem('users')) || [];
                const userData = users.find(u => u.id === currentUser.id);

                if (userData) {
                    document.getElementById('clientName').textContent = `${userData.Nome} ${userData.Cognome}`;
                    document.getElementById('clientEmail').textContent = userData.email;
                    document.getElementById('clientSince').textContent = userData.creatoA;
                }
            } else if (userRole === 'user') {
                document.querySelectorAll('.user-only').forEach(item => {
                    item.style.display = 'block';
                });

                // Load user info
                const users = JSON.parse(localStorage.getItem('users')) || [];
                const userData = users.find(u => u.id === currentUser.id);

                if (userData) {
                    document.getElementById('userName').textContent = `${userData.Nome} ${userData.Cognome}`;
                    document.getElementById('userEmail').textContent = userData.email;
                    document.getElementById('userSince').textContent = userData.creatoA;
                }
            } else {
                // If role is not recognized, redirect to login
                window.location.href = '/CRM/Login';
            }
        }

